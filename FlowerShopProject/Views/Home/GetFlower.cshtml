@model Flower

<form asp-controller="Home" asp-action="EditPurchase">

    <input for= "Id" hidden />

 <label asp-for="FlowerName" ></label>
 <input class="form-control" asp-for="FlowerName" />

 <label asp-for="FlowerFamily" ></label>
 <input class="form-control" asp-for="FlowerFamily" />

 <label asp-for="Quantity" ></label>
 <input class="form-control" asp-for="Quantity" />

  <label asp-for="ShippingDate" ></label>
 <input class="form-control" asp-for="ShippingDate" />

 <label asp-for="ShippingAddress" ></label>
 <input class="form-control" asp-for="ShippingAddress" />
 
 <br>
 
 <button class="btn btn-warning">Edit Purchase</button>
</form>

  <br>
  
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
        Cancel Purchase 
    </button>

    
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cancel Purchase</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete all information about this Purchase?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" onclick="deletePurchase()" class="btn btn-danger">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const deletePurchase = () => {
            window.location = `/Home/DeletePurchase/${@Model.Id}`
        }
    </script>